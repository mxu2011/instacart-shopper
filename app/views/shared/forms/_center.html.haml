= content_for :header do
  %span

= content_for :footer do
  %span

.form--center
  - if @errors
    .form__errors
      %p
        = @errors
  .form__header
    .form__header__image
      = link_to root_path do
        = image_tag "logo.png"
  .form__content
    = yield :form_content
  - if content_for? :form_footer
    .form__footer
      = yield :form_footer
